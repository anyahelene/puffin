{
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2020",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": false,
        "baseUrl": "./",
        "rootDirs": ["./puffin/"],
        "outDir": "dist/webroot/",
        "experimentalDecorators": true,
        "declaration": true,
        "strictNullChecks": false,
        //  "explainFiles" : true,
        //  "listEmittedFiles":true,
        "paths": {
            "css/frames.css": ["./dist/webroot/styles/frames.css"] //, "borb":["./src/main/webroot/borb/borb.ts"], "borb/*":["./src/main/webroot/borb/*"]
        }
        //    "types": ["webpack/module"],
        // "paths": {"node/getopts":["node_modules/getopts/index.d.ts" ]}
        //   "allowJs": true
    },
    "include": ["./puffin/**/*.ts"], //, "../turtleduck/borb/src/**/*.ts", "puffin/app/index.mts"],
    "exclude": ["node_modules"],
    "ts-node": {
        "logError": false,
        "compilerOptions": { "module": "ES2020" }
    }
}
